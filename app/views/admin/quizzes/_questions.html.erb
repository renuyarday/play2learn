<div class="action_items">
	<span class="action-item">
		<p><%= link_to "Add Question", new_admin_question_path %></p>
		<table border="0" cellspacing="0" cellpadding="0" id="books" class="index_table index" paginator="true">
			<thead>
	            <tr>
	              <th class="">Question</th>
	              <th>Hint</th>
	              <th></th>
	            </tr>
	        </thead>
          	<tbody>
          		<% for question in @quiz.questions %>
          		<tr class="odd">
          			<td class=""><%= question.question_text %></td>
          			<td class=""><%= question.hint %></td>
          			<td class="">
          				<%=	 link_to "View", admin_question_path(question) %>
                  <%=  link_to "Edit", edit_admin_question_path(question) %>
          				<%=	 link_to "Delete", admin_question_path(question), :confirm => "Are you sure you want to delete this question?", :method => :delete %>
          			</td>
          		</tr>
          		<% end %>
                </tbody>
            </table>
	</span>
</div>